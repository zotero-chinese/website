{
  "extends": [
    "@tsconfig/node20/tsconfig.json",
    "@vue/tsconfig/tsconfig.dom.json"
  ],
  "include": ["env.d.ts", ".vitepress/**/*", "src/**/*"],
  "compilerOptions": {
    // "composite": true,
    "noEmit": true,

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "allowJs": true,
    "strict": true,
    "jsx": "preserve",

    "baseUrl": ".",
    "paths": {
      // "@/*": ["./src/*"],
      "@theme/*": [".vitepress/theme/*"],
      "@wiki/*": ["src/wiki/*"],
      "@styles/": ["src/styles/*"],
      "@plugins/": ["src/plugins/*"],
      "@translators/": ["src/translators/*"]
    }
  }
}

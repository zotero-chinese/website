{
  "extends": ["@tsconfig/node20/tsconfig.json", "@vue/tsconfig/tsconfig.json"],
  "include": ["env.d.ts", "src/**/*"],
  "compilerOptions": {
    // "composite": true,
    "noEmit": true,

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "allowJs": true,
    "strict": true,
    "jsx": "preserve",

    "baseUrl": ".",
    "paths": {
      // "@/*": ["./src/*"],
      "@theme/*": ["src/.vitepress/theme/*"],
      "@wiki/*": ["src/wiki/*"]
    }
  }
}
